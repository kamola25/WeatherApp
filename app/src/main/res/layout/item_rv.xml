<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item"
        android:layout_margin="20dp"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rv"/>

    <ImageView
        android:id="@+id/txt_sun_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_img_sun"
        app:layout_constraintStart_toStartOf="@id/item"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/item"
        app:layout_constraintTop_toTopOf="@id/item"
        android:elevation="40dp"/>

    <TextView
        android:id="@+id/txt_weekend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_sun_item"
        android:elevation="40dp"
        android:text="Mon, 21"
        android:textSize="16sp"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="@id/txt_sun_item"
        app:layout_constraintEnd_toEndOf="@id/txt_sun_item"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow_light"/>






</androidx.constraintlayout.widget.ConstraintLayout>